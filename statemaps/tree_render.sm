alphaTest
{
	mtlAlphaTest == Always && mtlBlendOp == Add && mtlSrcBlend == SrcAlpha && mtlDestBlend == InvSrcAlpha:
	mtlAlphaTest == Always && mtlBlendOp == Add && mtlSrcBlend == SrcAlpha && mtlDestBlend == One:
		GT0;
	default:
		GE255;
}

blendFunc
{
	default:
		passthrough;
}

separateAlphaBlendFunc
{
	mtlBlendOp == Disable:
		Disable, One, Zero;
	mtlBlendOp == Add && mtlSrcBlend == One && mtlDestBlend == One:
		Add, Zero, One;
	mtlBlendOp == Add && mtlSrcBlend == InvDestColor && mtlDestBlend == One:
		Add, Zero, One;
	default:
		Add, InvDestAlpha, One;
}

cullFace
{
	default:
		passthrough;
}

depthTest
{
	default:
		passthrough;
}

depthWrite
{
	default:
		Disable;
}

colorWrite
{
	mtlPolygonOffset == 0:
		Enable, Enable;
	default:
		Enable, Enable;
}

polygonOffset
{
	default:
		passthrough;
}

stencil
{
	default:
		passthrough;
}

wireframe
{
	default:
		Disable;
}
