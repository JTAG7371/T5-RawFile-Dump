						0							1	17  					18		16		ITEM_ALIGN_LEFT		ITEM_ALIGN_MIDDLE	/* A_BUTTON			*/
						(FRAME_BUTTON_WIDTH-18)		2	14						14		0		ITEM_ALIGN_CENTER	ITEM_ALIGN_MIDDLE	/* CUSTOMIZED ICON	*/
		onfocus
		{
			play CHOICE_FOCUS_SOUND;
		}
